{
  "version": 2,
  "public": true,
  "crons": [
    {
      "path": "/api/cron-job.ts",
      "schedule": "30 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/index.ts"
    }
  ],
  "redirects": [{ "source": "/", "destination": "/api", "permanent": false }]
}
